<!--nội dung chính-->
<div id="main">

    <%- include("./partials/header.ejs") %>

    <div id="content">

        <%- include("./partials/sidebar.ejs") %>

        <div class="newfeed_content">
            <div class="newfeed_content_create">
                <div id="firstRow_create_js" class="firstRow_create_newfeed">
                    <i class="ti-user"></i>
                    <p>What's on your mind, Hung?</p>
                </div>
                <div class="secondRow_create_newfeed">
                    <div id="secondRow_create_js" class="secondRow_upload">
                        <i class="ti-camera"></i>Photo/Video
        
                    </div>
                    <div id="secondRow_create_js" class="secondRow_upload">
                        <i class="ti-face-smile"></i>Feeling/Activity
                    </div>
                </div>
            </div>

            <div id="postHere" class="newfeed_content_posts">

            </div>
        </div>
        
        
        <div class="newFeed_notify">
            <div class="newfeed_notify_header">
                <h3>THÔNG BÁO MỚI</h3>
                <a href="#">xem tất cả</a>
            </div>
            <div class="newfeed_notify_posts">
                <div class="newfeed_notify_post">
                    <span>[Phòng đại học]</span>
                    <span>02/01/2022</span>
                    <p>Kế hoạch TSNN/KTLN/môn thay thế TN đợt 1/2021-2022</p>
                </div>                
        </div>
    </div>
</div>

<div id="modal">
    <div class="modal_container">
        <div class="modal_create">
            <div class="modal_header">
                <h3>Tạo bài viết</h3>
            </div>
            <div class="modal_body">
                <div class="modal_info">
                    <i class="ti-user"></i>
                    <p><%= user.fullname %></p>
                </div>
                <div class="modal_text">
                    <form id="formCreatePost" action="/api/posts/" method="post">
                        <textarea name="content" placeholder="Bạn đang nghĩ gì thế ?"></textarea>
                        <label for="file_img">Hình ảnh</label> </br>
                        <input id="file_img" name="imagePost" type="file" placeholder=""> </br>
                        <label for="video_URL">Video</label> </br>
                        <input id="video_URL" name="video" type="text" placeholder="URL"> </br>
                        <button type="submit" id="btn_submit_post">Đăng bài viết</button>
                    </form>
                </div>
            </div>
            <div class="modal_close">
                <i class="ti-close"></i>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/callAPI.js"></script>
